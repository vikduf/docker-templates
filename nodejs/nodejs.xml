<?xml version="1.0" encoding="utf-8"?>
<Container>
  <Beta>False</Beta>
<Category>Downloaders:</Category>
  <Name>NodeJS</Name>
  <Support>https://lime-technology.com/forum/index.php?topic=43669.0</Support>
  <Description>
   Get a nodejs app running from /node/
  </Description>
  <Registry>https://registry.hub.docker.com/u/vikduf/nodejs/</Registry>
  <Repository>vikduf/nodejs</Repository>
  <BindTime>true</BindTime>
  <Privileged>false</Privileged>
  <Networking>
    <Mode>bridge</Mode>
    <Publish>
      <Port>
        <HostPort></HostPort>
        <ContainerPort></ContainerPort>
        <Protocol></Protocol>
      </Port>
    </Publish>
  </Networking>
  <Environment>
    <Variable>
      <Name></Name>
      <Value></Value>
    </Variable>
  </Environment>
  <Data>
     <Volume>
      <HostDir>/mnt/cache/appdata/node</HostDir>
      <ContainerDir>/node</ContainerDir>
      <Mode>rw</Mode>
    </Volume> 
    <Volume>
      <HostDir>/etc/localtime</HostDir>
      <ContainerDir>/etc/localtime</ContainerDir>
      <Mode>ro</Mode>
    </Volume>
  </Data>
  <Icon>http://i.imgur.com/KXTg4bO.jpg</Icon>
  <Banner>http://i.imgur.com/Qx23K8K.png</Banner>
</Container>